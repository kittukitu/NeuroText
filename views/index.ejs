<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NeuroText AI</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body class="bg-gray-100 flex flex-col items-center min-h-screen">

    <!-- Navbar -->
    <nav class="fixed top-0 left-0 right-0 z-10 w-full bg-white shadow-md bg-opacity-90">
        <div class="container flex items-center justify-between px-6 py-4 mx-auto">
            <h1 class="text-2xl font-bold text-purple-600 flex items-center">
                <i class="fa-solid fa-feather-alt mr-2 text-purple-500"></i> NeuroText
            </h1>

            <div class="space-x-4">
                <a href="/" class="text-blue-800 hover:text-teal-600 transition duration-300">
                    <i class="fa-solid fa-house mr-1 text-blue-500"></i> Home
                </a>
                <a href="/profile" class="text-gray-800 hover:text-teal-600 transition duration-300">
                    <i class="fa-solid fa-user mr-1 text-green-500"></i> Profile
                </a>
                <a href="/edit-profile" class="text-gray-800 hover:text-teal-600 transition duration-300">
                    <i class="fa-solid fa-gear mr-1 text-yellow-500"></i> Settings
                </a>
                <a href="/about" class="text-gray-800 hover:text-teal-600 transition duration-300">
                    <i class="fa-solid fa-circle-info mr-1 text-yellow-500"></i> About
                </a>
                <% if (user && user.role === 'admin') { %>
                    <a href="/admin/users" class="text-gray-800 hover:text-teal-600 transition duration-300">
                        <i class="fa-solid fa-users mr-1 text-purple-500"></i> User List
                    </a>
                <% } %>
                <a href="/login" class="text-gray-800 hover:text-teal-600 transition duration-300">
                    <i class="fa-solid fa-right-from-bracket mr-1 text-red-500"></i> Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="flex flex-col items-center justify-center w-full px-6 mt-20">
        <div class="bg-white shadow-lg rounded-lg p-8 max-w-lg w-full">
            <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">
                <i class="fa-solid fa-pen-nib text-purple-500"></i> NeuroText AI Content Generator
            </h2>

            <form action="/index" method="POST" class="space-y-4">
                <!-- Topic Input -->
                <div>
                    <label for="topic" class="block font-semibold text-gray-700">
                        <i class="fa-solid fa-lightbulb text-yellow-500"></i> Topic:
                    </label>
                    <input type="text" id="topic" name="topic" 
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" 
                        placeholder="Enter topic..." required>
                </div>

                <!-- Tone Selection -->
                <div>
                    <label for="tone" class="block font-semibold text-gray-700">
                        <i class="fa-solid fa-comment-dots text-blue-500"></i> Tone:
                    </label>
                    <select id="tone" name="tone" 
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" required>
                        <option value="formal">Formal</option>
                        <option value="casual">Casual</option>
                        <option value="persuasive">Persuasive</option>
                        <option value="informative">Informative</option>
                    </select>
                </div>

                <!-- Audience Selection -->
                <div>
                    <label for="audience" class="block font-semibold text-gray-700">
                        <i class="fa-solid fa-users text-green-500"></i> Target Audience:
                    </label>
                    <select id="audience" name="audience" 
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" required>
                        <option value="general">General Public</option>
                        <option value="technical">Technical Professionals</option>
                        <option value="students">Students</option>
                        <option value="business">Business Professionals</option>
                    </select>
                </div>

                <!-- Length Selection -->
                <div>
                    <label for="length" class="block font-semibold text-gray-700">
                        <i class="fa-solid fa-ruler text-gray-500"></i> Content Length:
                    </label>
                    <select id="length" name="length" 
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" required>
                        <option value="short">Short (100-300 words)</option>
                        <option value="medium">Medium (300-700 words)</option>
                        <option value="long">Long (700+ words)</option>
                    </select>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" 
                        class="w-full px-6 py-3 text-white font-semibold bg-purple-600 rounded-lg hover:bg-purple-700 transition duration-300">
                        <i class="fa-solid fa-magic-wand-sparkles"></i> Generate Content
                    </button>
                </div>
            </form>

        </div>
    </div>

</body>
</html>
